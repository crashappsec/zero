      ]
    },
    "security-deep": {
      "name": "Security Deep",
      "description": "Security-focused analysis with AI-enhanced insights",
      "estimated_time": "~6 minutes",
      "claude_mode": "enabled",
      "sbom_generator": "cdxgen",
      "claude_scanners": [
        "package-health",
        "package-provenance",
