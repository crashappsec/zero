        "container-security"
      ]
    },
    "deep": {
      "name": "Deep",
      "description": "Full analysis with Claude AI-assisted insights",
      "estimated_time": "~10 minutes",
      "claude_mode": "enabled",
      "sbom_generator": "cdxgen",
      "claude_scanners": [
        "package-sbom",
        "package-health",
        "package-provenance",
        "package-malcontent"
      ],
      "scanners": [
        "package-sbom",
