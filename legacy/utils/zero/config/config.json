{
  "version": "1.0",
  "description": "Global configuration for all utility modules",
  "config_behavior": {
    "ignore_module_configs": false,
    "description": "Set to true to ignore module-specific configs and use only global config"
  },
  "github": {
    "pat": "",
    "organizations": [],
    "repositories": [],
    "description": "GitHub settings used by all modules requiring repository access"
  },
  "output": {
    "default_dir": "./reports",
    "formats": ["table", "json", "markdown"],
    "default_format": "table"
  },
  "modules": {
    "supply-chain": {
      "enabled": true,
      "default_modules": ["vulnerability", "package-health"],
      "output_dir": "./supply-chain-reports",
      "vulnerability": {
        "prioritize": true,
        "min_cvss": 0,
        "check_kev": true,
        "taint_analysis": false
      },
      "provenance": {
        "verify_signatures": false,
        "min_slsa_level": 0,
        "strict_mode": false,
        "trusted_builders": [
          "https://github.com/actions/runner",
          "https://cloudbuild.googleapis.com"
        ],
        "ecosystems": ["npm", "pypi", "go", "maven", "docker"]
      }
    },
    "dora-metrics": {
      "enabled": true,
      "output_dir": "./dora-reports"
    },
    "code-ownership": {
      "enabled": true,
      "output_dir": "./ownership-reports"
    }
  },
  "tools": {
    "cosign": {
      "enabled": true,
      "keyless": true
    },
    "rekor": {
      "enabled": true,
      "url": "https://rekor.sigstore.dev"
    },
    "osv-scanner": {
      "enabled": true,
      "timeout": 300
    },
    "syft": {
      "enabled": true,
      "format": "cyclonedx-json"
    }
  }
}
