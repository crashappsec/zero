{
  "category": "code_markers",
  "description": "Debt markers embedded in source code indicating acknowledged technical debt",
  "markers": [
    {
      "pattern": "TODO",
      "regex": "TODO[:\\s]",
      "severity": "low",
      "weight": 0.5,
      "description": "Task to be completed later",
      "examples": ["TODO: implement caching", "TODO: add error handling"]
    },
    {
      "pattern": "FIXME",
      "regex": "FIXME[:\\s]",
      "severity": "medium",
      "weight": 1.5,
      "description": "Known bug or issue that needs fixing",
      "examples": ["FIXME: race condition here", "FIXME: null check missing"]
    },
    {
      "pattern": "HACK",
      "regex": "HACK[:\\s]",
      "severity": "high",
      "weight": 3.0,
      "description": "Workaround or shortcut that should be replaced",
      "examples": ["HACK: bypassing validation", "HACK: temporary fix for prod"]
    },
    {
      "pattern": "XXX",
      "regex": "XXX[:\\s]",
      "severity": "high",
      "weight": 3.0,
      "description": "Requires attention, often dangerous code",
      "examples": ["XXX: security concern", "XXX: not thread safe"]
    },
    {
      "pattern": "KLUDGE",
      "regex": "KLUDGE[:\\s]",
      "severity": "high",
      "weight": 3.0,
      "description": "Clumsy or inelegant solution",
      "examples": ["KLUDGE: workaround for library bug"]
    },
    {
      "pattern": "OPTIMIZE",
      "regex": "OPTIMIZE[:\\s]",
      "severity": "low",
      "weight": 0.5,
      "description": "Performance improvement needed",
      "examples": ["OPTIMIZE: O(n^2) complexity", "OPTIMIZE: add caching"]
    },
    {
      "pattern": "REFACTOR",
      "regex": "REFACTOR[:\\s]",
      "severity": "medium",
      "weight": 1.0,
      "description": "Code needs restructuring",
      "examples": ["REFACTOR: extract to separate class", "REFACTOR: simplify logic"]
    },
    {
      "pattern": "BUG",
      "regex": "BUG[:\\s]",
      "severity": "high",
      "weight": 2.5,
      "description": "Known bug in code",
      "examples": ["BUG: off-by-one error", "BUG: memory leak"]
    },
    {
      "pattern": "DEPRECATED",
      "regex": "@[Dd]eprecated|DEPRECATED",
      "severity": "medium",
      "weight": 1.5,
      "description": "Code marked for removal",
      "examples": ["@deprecated Use newMethod instead", "DEPRECATED: will be removed in v3"]
    },
    {
      "pattern": "TEMP",
      "regex": "TEMP[:\\s]|TEMPORARY[:\\s]",
      "severity": "medium",
      "weight": 2.0,
      "description": "Temporary code that should be removed",
      "examples": ["TEMP: debugging code", "TEMPORARY: hardcoded value"]
    },
    {
      "pattern": "REVIEW",
      "regex": "REVIEW[:\\s]|NEEDS.?REVIEW",
      "severity": "low",
      "weight": 0.5,
      "description": "Code requires review",
      "examples": ["REVIEW: is this the right approach?", "NEEDS REVIEW: edge cases"]
    },
    {
      "pattern": "SECURITY",
      "regex": "SECURITY[:\\s]|INSECURE",
      "severity": "critical",
      "weight": 5.0,
      "description": "Security concern in code",
      "examples": ["SECURITY: input not sanitized", "INSECURE: using MD5 for passwords"]
    }
  ],
  "age_multipliers": {
    "description": "Multiply weight by age factor for old debt",
    "thresholds": [
      { "days": 180, "multiplier": 1.0, "label": "recent" },
      { "days": 365, "multiplier": 1.25, "label": "aging" },
      { "days": 730, "multiplier": 1.5, "label": "old" },
      { "days": 1095, "multiplier": 2.0, "label": "ancient" }
    ]
  },
  "context_multipliers": {
    "critical_path": 1.5,
    "public_api": 1.3,
    "test_file": 0.5,
    "generated_code": 0.1
  },
  "score_caps": {
    "per_marker_type": 30,
    "total_category": 100
  }
}
