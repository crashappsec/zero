{
  "category": "code_complexity",
  "description": "Thresholds for cyclomatic and cognitive complexity metrics",
  "cyclomatic_complexity": {
    "description": "Number of linearly independent paths through code",
    "thresholds": {
      "function": [
        { "min": 1, "max": 10, "level": "simple", "score": 0, "action": "none" },
        { "min": 11, "max": 20, "level": "moderate", "score": 25, "action": "consider_refactor" },
        { "min": 21, "max": 50, "level": "complex", "score": 50, "action": "refactor_recommended" },
        { "min": 51, "max": 100, "level": "very_complex", "score": 75, "action": "refactor_required" },
        { "min": 101, "max": null, "level": "unmaintainable", "score": 100, "action": "critical_refactor" }
      ],
      "file": [
        { "min": 1, "max": 50, "level": "simple", "score": 0 },
        { "min": 51, "max": 100, "level": "moderate", "score": 25 },
        { "min": 101, "max": 200, "level": "complex", "score": 50 },
        { "min": 201, "max": 500, "level": "very_complex", "score": 75 },
        { "min": 501, "max": null, "level": "unmaintainable", "score": 100 }
      ]
    }
  },
  "cognitive_complexity": {
    "description": "Measure of how difficult code is to understand",
    "thresholds": {
      "function": [
        { "min": 0, "max": 5, "level": "simple", "score": 0 },
        { "min": 6, "max": 10, "level": "moderate", "score": 25 },
        { "min": 11, "max": 15, "level": "complex", "score": 50 },
        { "min": 16, "max": 25, "level": "very_complex", "score": 75 },
        { "min": 26, "max": null, "level": "unmaintainable", "score": 100 }
      ]
    }
  },
  "nesting_depth": {
    "description": "Maximum nesting level of control structures",
    "thresholds": [
      { "depth": 3, "level": "acceptable", "score": 0 },
      { "depth": 4, "level": "warning", "score": 25 },
      { "depth": 5, "level": "high", "score": 50 },
      { "depth": 6, "level": "very_high", "score": 75 },
      { "depth": 7, "level": "critical", "score": 100 }
    ]
  },
  "parameter_count": {
    "description": "Number of parameters in function signature",
    "thresholds": [
      { "count": 4, "level": "acceptable", "score": 0 },
      { "count": 5, "level": "warning", "score": 20 },
      { "count": 7, "level": "high", "score": 50 },
      { "count": 10, "level": "critical", "score": 80 }
    ]
  },
  "language_specific": {
    "javascript": {
      "callback_depth": { "warning": 3, "critical": 5 },
      "promise_chain_length": { "warning": 4, "critical": 6 }
    },
    "python": {
      "class_method_count": { "warning": 20, "critical": 30 },
      "inheritance_depth": { "warning": 3, "critical": 5 }
    },
    "java": {
      "class_method_count": { "warning": 25, "critical": 40 },
      "inheritance_depth": { "warning": 4, "critical": 6 }
    }
  }
}
