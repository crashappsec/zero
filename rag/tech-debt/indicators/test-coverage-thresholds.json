{
  "category": "test_coverage",
  "description": "Thresholds for test coverage as technical debt indicator",
  "coverage_levels": {
    "line_coverage": {
      "description": "Percentage of lines executed during tests",
      "thresholds": [
        { "min": 80, "max": 100, "level": "excellent", "score": 0 },
        { "min": 60, "max": 80, "level": "good", "score": 20 },
        { "min": 40, "max": 60, "level": "moderate", "score": 45 },
        { "min": 20, "max": 40, "level": "poor", "score": 70 },
        { "min": 0, "max": 20, "level": "critical", "score": 100 }
      ]
    },
    "branch_coverage": {
      "description": "Percentage of branches executed during tests",
      "thresholds": [
        { "min": 70, "max": 100, "level": "excellent", "score": 0 },
        { "min": 50, "max": 70, "level": "good", "score": 25 },
        { "min": 30, "max": 50, "level": "moderate", "score": 50 },
        { "min": 10, "max": 30, "level": "poor", "score": 75 },
        { "min": 0, "max": 10, "level": "critical", "score": 100 }
      ]
    },
    "function_coverage": {
      "description": "Percentage of functions called during tests",
      "thresholds": [
        { "min": 85, "max": 100, "level": "excellent", "score": 0 },
        { "min": 70, "max": 85, "level": "good", "score": 20 },
        { "min": 50, "max": 70, "level": "moderate", "score": 40 },
        { "min": 30, "max": 50, "level": "poor", "score": 65 },
        { "min": 0, "max": 30, "level": "critical", "score": 90 }
      ]
    }
  },
  "test_to_code_ratio": {
    "description": "Ratio of test files to source files",
    "thresholds": [
      { "min": 0.8, "max": null, "level": "excellent", "score": 0 },
      { "min": 0.5, "max": 0.8, "level": "good", "score": 20 },
      { "min": 0.3, "max": 0.5, "level": "moderate", "score": 45 },
      { "min": 0.1, "max": 0.3, "level": "poor", "score": 70 },
      { "min": 0, "max": 0.1, "level": "critical", "score": 100 }
    ]
  },
  "critical_path_coverage": {
    "description": "Coverage requirements for critical code paths",
    "minimum_coverage": 90,
    "critical_patterns": [
      "**/auth/**",
      "**/payment/**",
      "**/security/**",
      "**/api/**",
      "**/core/**"
    ]
  },
  "coverage_trends": {
    "description": "Track coverage changes over time",
    "warning_decrease": 5,
    "critical_decrease": 10,
    "period_days": 30
  },
  "uncovered_code_debt": {
    "description": "Specific debt for uncovered areas",
    "high_risk_uncovered": {
      "error_handlers": "high",
      "authentication": "critical",
      "data_validation": "high",
      "edge_cases": "medium"
    }
  }
}
