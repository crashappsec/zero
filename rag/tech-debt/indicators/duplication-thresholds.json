{
  "category": "code_duplication",
  "description": "Thresholds for detecting and scoring code duplication",
  "overall_duplication": {
    "description": "Percentage of codebase that is duplicated",
    "thresholds": [
      { "min": 0, "max": 3, "level": "excellent", "score": 0, "description": "Minimal duplication" },
      { "min": 3, "max": 5, "level": "good", "score": 15, "description": "Acceptable DRY adherence" },
      { "min": 5, "max": 10, "level": "moderate", "score": 35, "description": "Consider refactoring" },
      { "min": 10, "max": 20, "level": "high", "score": 65, "description": "Significant duplication" },
      { "min": 20, "max": null, "level": "critical", "score": 100, "description": "Severe DRY violations" }
    ]
  },
  "clone_detection": {
    "min_lines": 6,
    "min_tokens": 50,
    "types": [
      {
        "type": 1,
        "name": "exact_clones",
        "description": "Identical code fragments",
        "severity": "high",
        "weight": 1.0
      },
      {
        "type": 2,
        "name": "renamed_clones",
        "description": "Identical structure, renamed identifiers",
        "severity": "medium",
        "weight": 0.8
      },
      {
        "type": 3,
        "name": "gapped_clones",
        "description": "Copied with modifications",
        "severity": "medium",
        "weight": 0.6
      },
      {
        "type": 4,
        "name": "semantic_clones",
        "description": "Different syntax, same semantics",
        "severity": "low",
        "weight": 0.4
      }
    ]
  },
  "hotspot_detection": {
    "description": "Files with most duplication issues",
    "threshold_percentage": 30,
    "threshold_clone_count": 5
  },
  "acceptable_duplication": {
    "description": "Patterns where duplication is acceptable",
    "patterns": [
      "test fixtures and setup",
      "generated code",
      "configuration files",
      "database migrations",
      "protocol buffers / IDL",
      "boilerplate required by frameworks"
    ]
  },
  "tools": {
    "recommended": [
      { "name": "jscpd", "languages": ["javascript", "typescript", "python", "java", "go"] },
      { "name": "PMD CPD", "languages": ["java", "javascript", "python"] },
      { "name": "Simian", "languages": ["java", "c#", "javascript"] },
      { "name": "SonarQube", "languages": ["multi"] }
    ]
  }
}
