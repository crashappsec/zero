{
  "provider": "google",
  "name": "Google Distroless",
  "description": "Distroless images contain only your application and its runtime dependencies. They do not contain package managers, shells or any other programs you would expect to find in a standard Linux distribution.",
  "registry": "gcr.io/distroless",
  "documentation": "https://github.com/GoogleContainerTools/distroless",
  "security_rating": "very_high",
  "features": [
    "Minimal attack surface",
    "No shell or package manager",
    "Signed with cosign",
    "SBOM available",
    "Regular security updates"
  ],
  "images": [
    {
      "name": "gcr.io/distroless/static-debian12",
      "languages": ["go", "rust"],
      "use_case": "Static binaries with no external dependencies",
      "stage": "production",
      "notes": "Smallest possible image, for fully static binaries only"
    },
    {
      "name": "gcr.io/distroless/base-debian12",
      "languages": ["go", "rust", "c", "cpp"],
      "use_case": "Binaries that need glibc",
      "stage": "production",
      "notes": "Includes glibc, libssl, and CA certificates"
    },
    {
      "name": "gcr.io/distroless/cc-debian12",
      "languages": ["rust", "c", "cpp"],
      "use_case": "Binaries with C/C++ dependencies",
      "stage": "production",
      "notes": "Includes libgcc and libstdc++"
    },
    {
      "name": "gcr.io/distroless/nodejs20-debian12",
      "languages": ["nodejs", "javascript", "typescript"],
      "use_case": "Node.js 20 applications",
      "stage": "production",
      "notes": "Node.js 20 LTS runtime, minimal footprint"
    },
    {
      "name": "gcr.io/distroless/nodejs22-debian12",
      "languages": ["nodejs", "javascript", "typescript"],
      "use_case": "Node.js 22 applications",
      "stage": "production",
      "notes": "Node.js 22 runtime"
    },
    {
      "name": "gcr.io/distroless/python3-debian12",
      "languages": ["python"],
      "use_case": "Python 3 applications",
      "stage": "production",
      "notes": "Python 3 runtime, no pip included"
    },
    {
      "name": "gcr.io/distroless/java21-debian12",
      "languages": ["java", "kotlin", "scala"],
      "use_case": "Java 21 applications",
      "stage": "production",
      "notes": "OpenJDK 21 JRE"
    },
    {
      "name": "gcr.io/distroless/java17-debian12",
      "languages": ["java", "kotlin", "scala"],
      "use_case": "Java 17 LTS applications",
      "stage": "production",
      "notes": "OpenJDK 17 LTS JRE"
    }
  ],
  "best_practices": [
    "Use multi-stage builds: build in full image, deploy with distroless",
    "Copy only required artifacts to the distroless image",
    "For debugging, use :debug tag variant (includes busybox shell)",
    "Pin to specific SHA digests for reproducibility"
  ]
}
