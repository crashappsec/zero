{
  "$schema": "./zero.config.schema.json",
  "_version": "4.1.0",

  "settings": {
    "default_profile": "all-quick",
    "storage_path": ".zero",
    "parallel_repos": 8,
    "parallel_scanners": 4,
    "scanner_timeout_seconds": 300,
    "cache_ttl_hours": 24
  },

  "profiles": {
    "all-quick": {
      "name": "All Quick",
      "description": "Fast analysis across all dimensions - good for initial assessment",
      "use_case": "general",
      "scanners": ["code-packages", "code-security", "code-quality", "devops", "technology-identification", "code-ownership", "developer-experience"],
      "feature_overrides": {
        "code-packages": {
          "malcontent": {"enabled": false},
          "provenance": {"enabled": false},
          "reachability": {"enabled": false}
        },
        "code-security": {
          "secrets": {"git_history_scan": {"enabled": false}}
        },
        "devops": {
          "dora": {"enabled": false}
        }
      }
    },
    "all-complete": {
      "name": "All Complete",
      "description": "Complete analysis with all features enabled - comprehensive but slower",
      "use_case": "general",
      "scanners": ["code-packages", "code-security", "code-quality", "devops", "technology-identification", "code-ownership", "developer-experience"]
    },
    "code-packages": {
      "name": "Code Packages",
      "description": "SBOM generation and package analysis",
      "scanners": ["code-packages"]
    },
    "code-security": {
      "name": "Code Security",
      "description": "SAST, secrets, API security, cryptography",
      "scanners": ["code-security"]
    },
    "code-quality": {
      "name": "Code Quality",
      "description": "Tech debt, complexity, test coverage",
      "scanners": ["code-quality"]
    },
    "devops": {
      "name": "DevOps",
      "description": "IaC, containers, GitHub Actions, DORA metrics",
      "scanners": ["devops"]
    },
    "technology-identification": {
      "name": "Technology Identification",
      "description": "Technology detection and ML-BOM generation",
      "scanners": ["technology-identification"]
    },
    "code-ownership": {
      "name": "Code Ownership",
      "description": "Contributors, bus factor, CODEOWNERS analysis",
      "scanners": ["code-ownership"]
    },
    "developer-experience": {
      "name": "Developer Experience",
      "description": "Onboarding, tooling sprawl, workflow analysis",
      "scanners": ["technology-identification", "developer-experience"]
    },

    "_comment_use_case_profiles": "Use-case focused profiles for common scenarios",

    "security-focused": {
      "name": "Security Focused",
      "description": "Deep security and supply chain analysis - vulnerabilities, secrets, crypto, malware detection",
      "use_case": "security",
      "scanners": ["code-packages", "code-security"],
      "feature_overrides": {
        "code-packages": {
          "malcontent": {"enabled": true},
          "provenance": {"enabled": true},
          "typosquats": {"enabled": true}
        },
        "code-security": {
          "secrets": {"git_history_scan": {"enabled": true}}
        }
      }
    },

    "engineering-health": {
      "name": "Engineering Health",
      "description": "Team productivity and code health - quality metrics, ownership, developer experience",
      "use_case": "engineering",
      "scanners": ["code-quality", "code-ownership", "developer-experience", "technology-identification", "devops"],
      "feature_overrides": {
        "devops": {
          "dora": {"enabled": true},
          "git": {"enabled": true}
        }
      }
    },

    "compliance": {
      "name": "Compliance & Audit",
      "description": "Audit and compliance readiness - licenses, vulnerabilities, security controls, IaC",
      "use_case": "compliance",
      "scanners": ["code-packages", "code-security", "devops"],
      "feature_overrides": {
        "code-packages": {
          "licenses": {"enabled": true},
          "provenance": {"enabled": true}
        },
        "devops": {
          "iac": {"enabled": true},
          "containers": {"enabled": true}
        }
      }
    },

    "supply-chain": {
      "name": "Supply Chain Security",
      "description": "Focus on dependency security - SBOMs, vulnerabilities, malware, license compliance",
      "use_case": "security",
      "scanners": ["code-packages"],
      "feature_overrides": {
        "code-packages": {
          "malcontent": {"enabled": true},
          "provenance": {"enabled": true},
          "typosquats": {"enabled": true},
          "confusion": {"enabled": true},
          "reachability": {"enabled": true}
        }
      }
    }
  }
}
